{
  "$schema": "https://schemas.tauri.app/capability/1",
  "identifier": "default",
  "description": "Default capability granting core and shell permissions for the Projectlib desktop app.",
  "windows": ["*"],
  "permissions": [
    "core:default",
    "fs:default",
    "fs:allow-read-file",
    "fs:allow-write-file",
    "fs:allow-read-dir",
    "sql:default",
    "sql:allow-load",
    "sql:allow-execute",
    "log:default",
    "log:allow-log",
    {
      "identifier": "shell:allow-execute",
      "allow": [
        {
          "name": "git",
          "cmd": "git",
          "args": true
        },
        {
          "name": "git-powershell",
          "cmd": "powershell.exe",
          "args": true
        }
      ]
    },
    {
      "identifier": "shell:allow-spawn",
      "allow": [
        {
          "name": "git",
          "cmd": "git",
          "args": true
        },
        {
          "name": "git-powershell",
          "cmd": "powershell.exe",
          "args": true
        }
      ]
    }
  ]
}
